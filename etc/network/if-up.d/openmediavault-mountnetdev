[ "$IFACE" != "lo" ] || exit 0

[ "$ADDRFAM" = "inet" ] || [ "$ADDRFAM" = "inet6" ] || exit 0


fstabFiles=$({
    echo /etc/fstab
    if [ -d /etc/fstab.d ]; then
        ls -1 /etc/fstab.d | grep '\.fstab$' | sed -e 's;^;/etc/fstab.d/;'
    fi
})

for file in ${fstabFiles}; do
    NETDEV=""
    if [ -f "$file" ]; then
        while read DEV MTPT FSTYPE OPTS REST; do
            case "$DEV" in
                ""|\#*)
                    continue
                    ;;
            esac
            case "$OPTS" in
                noauto|*,noauto|noauto,*|*,noauto,*)
                    continue
                    ;;
                _netdev|*,_netdev|_netdev,*|*,_netdev,*)
                    NETDEV=yes
                    ;;
            esac
        done < "$file"
    fi
done

# at least one filesystem with option _netdev found so try mounting those devices
if [ "$NETDEV" ]; then
    mount -a -O _netdev
fi
